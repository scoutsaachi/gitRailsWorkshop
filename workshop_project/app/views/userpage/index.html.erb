<ul>
<% @users.each do |user| %>
	<li> <%= user.first_name + " " + user.last_name + ": " + user.age.to_s %> </li>
<% end %>
</ul>

<%= form_tag({controller: "userpage", action: "post_new"}, :method => "post") do %>
	<p> <%= label_tag(:first_name, "Enter your first name:") %> </p>
	<p> <%= text_field_tag(:first_name) %> </p>
	<p> <%= label_tag(:last_name, "Enter your last name:") %> </p>
	<p> <%= text_field_tag(:last_name) %> </p>
	<p> <%= label_tag(:age, "Enter your age:") %> </p>
	<p> <%= text_field_tag(:age) %> </p>
	<p> <%= submit_tag("Submit") %> </p>
<% end %>